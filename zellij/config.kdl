keybinds clear-defaults=true {
    shared {
        bind "Ctrl t" { NewTab; }
        bind "Alt h" "Alt Left" { MoveFocusOrTab "Left"; }
        bind "Alt l" "Alt Right" { MoveFocusOrTab "Right"; }
    }
}

themes {
    tokyo-night-storm {
        fg 169 177 214
        bg 200 210 225
        black 56 62 90
        red 249 51 87
        green 158 206 106
        yellow 224 175 104
        blue 122 162 247
        magenta 187 154 247
        cyan 42 195 222
        white 192 202 245
        orange 255 158 100
    }
}

theme "tokyo-night-storm"
on_force_close "quit"
default_layout "compact"
